<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:Class="Todo.Views.TodoListView">

    <DockPanel Margin="5">
        <StackPanel>
            <TextBlock Classes="h1" Text="Deine ToDo Liste" />
            <DataGrid Items="{Binding Items}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" RowBackground="#ffffff">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Created"
                                        IsReadOnly="True"
                                        Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy\}}"
                                        Width="1*" />
                    <DataGridTextColumn Header="Description"
                                        IsReadOnly="True"
                                        Binding="{Binding Description}"
                                        Width="3*" />
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Delete selected entry" Command="{Binding DeleteSelected}" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" DockPanel.Dock="Bottom"
                        Margin="0,5" Spacing="20">

                <Button Command="{Binding $parent[Window].DataContext.ShowDialog}" HotKey="Ctrl+S">Liste speichern</Button>
                <Button Command="{Binding $parent[Window].DataContext.AddItem}">ToDo hinzuf√ºgen</Button>
                <Popup Name="popupWithOffset" HorizontalOffset="300" Width ="250" Height="100">
                    <TextBlock Text="Popup with offset"/>
                </Popup>
            </StackPanel>
        </StackPanel>

    </DockPanel>
</UserControl>
